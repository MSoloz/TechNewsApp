<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventActivity">






    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_event_name_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:errorEnabled="true"
        app:hintEnabled="false"
        app:boxBackgroundColor="@color/white"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_event_name_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Name"
            android:inputType="textEmailAddress"/>




    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_event_date_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:errorEnabled="true"
        app:hintEnabled="false"
        app:boxBackgroundColor="@color/white"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_event_name_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_event_date_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Event date"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_event_address_layout"
        android:layout_width="match_parent"
        app:boxBackgroundColor="@color/white"
        android:layout_height="55dp"
        app:errorEnabled="true"
        app:hintEnabled="false"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_event_date_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_event_address_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Address"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/add_event_description_layout"
        android:layout_width="match_parent"
        app:boxBackgroundColor="@color/white"
        android:layout_height="55dp"
        app:errorEnabled="true"
        app:hintEnabled="false"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_event_address_layout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/add_event_description_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Description"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>



    <ImageView
        android:id="@+id/add_event_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_event_description_layout"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_event_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginEnd ="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="20dp"
        android:text="save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>